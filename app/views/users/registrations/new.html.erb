<div class='col-md-6 col-md-offset-3'>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Sign up</h2>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), role: "form") do |f| %>
	<div class="form-group">
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "user@email.com"%></div>
	</div>
	<div class="form-group">
	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, class: "form-control", placeholder: "********"%></div>
	</div>
	<div class="form-group">
	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "********"%></div>
	</div>
	<div class="form-group">
	  <%= recaptcha_tags noscript: false %>
	</div>
	
	<div><%= f.submit "Sign up",class: "btn btn-default" %></div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>